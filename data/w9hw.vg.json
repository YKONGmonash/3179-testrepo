{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 500,
    "title": "Australian Wildfire Satellite Data",
    "projection": {
        "type": "equirectangular",
        "center": [146, -36],
    "rotate": [-100,0,0]
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/YKONGmonash/3179-testrepo/main/data/austopo.geo.json",
                "format": {
                    "type": "topojson", "feature": "aus.geo"}
            },
            "mark": {
                "type": "geoshape", 
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/YKONGmonash/3179-testrepo/main/fire_archive_V1_101674.csv"
            },
            "mark": {
                "type": "point",
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "longitude": {
                    "field": "longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "bright_ti4",
                    "type": "quantitative",
                    "scale": {
                        "type":"threshold",
                        "domain": [300, 320, 340, 360, 380, 400],
                        "range":[1, 2, 3 , 4 ,5, 6]
                        
                    }
                },
                "color": {
                    "field": "bright_ti4",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "yelloworangered"
                    }
                }
            }
        }
    ]
}
