{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "title":"Mean Temp For Australian Cities",
    "data": {
        "url": "https://raw.githubusercontent.com/YKONGmonash/3179-testrepo/main/data/weatherAUS.csv"
    },
    "mark": "bar",
    "transform": [
        {"filter":"isValid(datum.MinTemp)"},
        {"filter":"isValid(datum.MaxTemp)"},
        {"filter":"isValid(datum.Date)"},
        {
            "aggregate": [
                {
                    "op": "mean",
                    "field": "MinTemp",
                    "as": "Mean_Min"
                },
                {
                    "op": "mean",
                    "field": "MaxTemp",
                    "as": "Mean_Max"
                }

            ],
            "groupby": [
                "Location", "Date"
            ]
        }
    ],
    "encoding": {
        "x": {
            "field": "Location",
            "type": "nominal",
            "title": "Location"
        },
        "y": {
            "aggregate": "mean",
            "type": "quantitative"
        },
        "color": {
            "field": "Mean_Min",
            "type": "quantitative",
            "scale": {
                "domain": [
                    "Mean_Max",
                    "Mean_Min"
                ],
                "range": [
                    "#e7ba52",
                    "#c7c7c7"
                ]
            },
            "title": "Max/Min Temp"
        }
    }
}